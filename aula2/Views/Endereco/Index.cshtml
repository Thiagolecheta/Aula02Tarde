@model IEnumerable<Endereco>
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>Listar Endreço</title>
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <h3>Lista dos Endereços</h3>
    <br>
    <br>
    <p style="text-align:center !important;">
        <a class="btn btn-outline-info" asp-action="CadastrarEndereco">Cadastrar Cep</a>
    </p>
    <br />
    <table class="table" style="text-align:center;width:70%;margin:auto !important;">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cep)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Logradouro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complemento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Bairro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Localidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Uf)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Unidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ibge)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gia)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cep)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Logradouro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Complemento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bairro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Localidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Uf)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unidade)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Ibge)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Gia)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <br />
    <b class="blockquote-footer">Dados atualizados: @ViewBag.Data</b>

</body>
</html>
